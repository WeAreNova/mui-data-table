{
  "name": "root",
  "version": "1.1.4",
  "private": true,
  "scripts": {
    "start:rollup": "npm run build -- --watch",
    "start:dev": "wait-on build/lib/index.js && npm start -w dev",
    "start": "concurrently --names \"rollup,react\" -c \"green,blue\" \"npm run start:rollup\" \"npm run start:dev\"",
    "build": "npx rimraf build/ && rollup --config rollup.config.ts",
    "publish": "cd build && npm publish --access public"
  },
  "workspaces": [
    "lib",
    "dev"
  ],
  "author": {
    "name": "David Parrish",
    "url": "https://github.com/dvprrsh"
  },
  "contributor": [
    {
      "name": "David Parrish",
      "url": "https://github.com/dvprrsh"
    },
    {
      "name": "Lee Lavery",
      "url": "https://github.com/leelavery"
    },
    {
      "name": "Nova",
      "url": "https://github.com/WeAreNova"
    }
  ],
  "license": "MIT",
  "keywords": [
    "mui",
    "material-ui",
    "table",
    "data-table",
    "sorting",
    "pagination",
    "multi-column",
    "filtering",
    "server-side",
    "data",
    "fetching"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "concurrently": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sonarjs": "^0.10.0",
    "rollup": "^2.58.3",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-progress": "^1.1.2",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4",
    "wait-on": "^6.0.0"
  }
}
